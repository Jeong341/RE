  border-bottom-right-radius: 70px;
}
/* 动画背景 */
.Move_1 view{
  position: absolute;
  border: 1px solid #fff;
  width: 30px;
  height: 30px;
  list-style: none;
  opacity: 0;
  background-color: #fff;
}
.square view{
  top: 40vh;
  left: 60vw;
  animation: square 10s linear infinite;  
}

.square view:nth-child(2){
  top: 80vh;
  left: 10vw;
  animation-delay: 2s;  
}

.square view:nth-child(3){
  top: 80vh;
  left: 85vw;
  animation-delay: 4s;    
}

.square view:nth-child(4){
  top: 10vh;
  left: 15vw; 
  animation-delay: 3s;   
}

.square view:nth-child(5){
  top: 16vh;
  left: 91vw;
  animation-delay: 5s;   
}

.circle view{
  bottom: 0;
  left: 15px;
  animation: circle 10s linear infinite;
}

.circle view:nth-child(2){
  left: 35vw;
  animation-delay: 3s;
}

.circle view:nth-child(3){
  left: 45vw;
  animation-delay: 4s;
}

.circle view:nth-child(4){
  left: 55vw;
  animation-delay: 5s;
}

.circle view:nth-child(5){
  left: 65vw;
  animation-delay: 8s;
}

.circle view:nth-child(2){
  left: 75v;
  animation-delay: 2s;
}
@keyframes square {
    0%{
      transform: scale(0) rotateY(0deg);
      opacity: 1;
    }
    100%{
      transform: scale(5) rotateY(1000deg);
      opacity: 0;
    }
}

@keyframes circle {
  0%{
    transform: scale(0) rotateY(0deg);
    opacity: 1;
    bottom: 0;
    border-radius: 0;
  }
  100%{
    transform: scale(5) rotateY(1000deg);
    opacity: 0;
    bottom: 90vh;
    border-radius: 50%;
  }
}
